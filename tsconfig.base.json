{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "strictBindCallApply": false,
    "incremental": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@db/entities": [
        "backend/database/src/lib/entities"
      ],
      "@environments": [
        "config/constants.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
